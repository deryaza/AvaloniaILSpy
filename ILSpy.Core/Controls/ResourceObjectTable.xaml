<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="ICSharpCode.ILSpy.Controls.ResourceObjectTable"
    xmlns="https://github.com/avaloniaui" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:properties="clr-namespace:ICSharpCode.ILSpy.Properties">
    <!-- Workaround for https://github.com/AvaloniaUI/Avalonia/issues/2593 -->
    <x:Arguments>
        <x:Null />
        <x:Null />
    </x:Arguments>
    <Grid Margin="5,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Margin="5" Text="{x:Static properties:Resources.OtherResources}" FontFamily="Segoe UI" FontWeight="Bold" FontSize="12" />
        <DataGrid Name="resourceListView" FontFamily="Segoe UI" FontSize="9" Grid.Row="1" RowBackground="{DynamicResource ThemeBackgroundBrush}" CanUserResizeColumns="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="{x:Static properties:Resources.Name}" Binding="{Binding Key}" Width="*" />
                <DataGridTextColumn Header="{x:Static properties:Resources.ValueString}" Binding="{Binding Value}" Width="*" />
                <DataGridTextColumn Header="{x:Static properties:Resources.Type}" Binding="{Binding Type}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>